<% if current_user != user %>
  <% if current_user.following?(user) %>
    <table>
    <th><%= link_to "フォローを外す", user_relationships_path(user.id), method: :delete, class: "btn btn-info" %></th>
    <th><%= link_to 'chatを始める', chat_path(user.id)%></th>
    </table>
  <% else %>
    <%= link_to "フォローをする", user_relationships_path(user.id), method: :post, class: "btn btn-success" %>
  <% end %>
<% end %>